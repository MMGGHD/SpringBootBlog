<!-- Form태그가 있는 문서는 ---form의 문법 -->
{{> /layout/header}}

<!-- title=사용자입력값&content=적은내용 << x-www 형식으로 전달된다. 
    (입력값은 value에 들어간다.)-->
<div class="container p-5">
    <!-- 수정삭제버튼 -->
    {{#pageOwner}}
    <div class="mb-5 d-flex justify-content-end">
        <a class="btn btn-warning me-1" href="/board/{{board.id}}/updateForm">수정</a>
        <form action="/board/{{board.id}}/delete" method="post">
            <button type="submit" class="btn btn-danger">삭제</button>
        </form>

    </div>
    {{/pageOwner}}

    <!-- 게시글내용 -->
    {{#board}}
    <div>
        <h2><b>{{title}}</b></h2>
        <hr/>
        <div class="m-4 p-2">
            {{content}}
        </div>
    </div>

    {{/board}}
    <!-- 댓글 -->
    <div class="card mt-3">
        <!-- 댓글등록 -->
        <div class="card-body">
            <form action="/reply/save" method="post">
            <input type="hidden" name="boardId" value="{{board.id}}">
                <textarea class="form-control" rows="2" name="comment"></textarea>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary mt-1">댓글등록</button>
                </div>
            </form>
        </div>
        <!-- 댓글목록 -->
        <div class="card-footer">
            <b>댓글리스트</b>
        </div>
        <div class="list-group">
        
    {{#replyList}}
            <!-- 댓글아이템 -->
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <div class="px-1 me-1 bg-primary text-white rounded">{{user.username}}</div>
                    <div>{{comment}}</div>
                </div>
                <form action="/reply/1/delete" method="post">
                    <button class="btn">✏</button>
                </form>
            </div>
            
    {{/replyList}}
            <!-- 댓글아이템 -->
            {{! <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <div class="px-1 me-1 bg-primary text-white rounded">ssar</div>
                    <div>댓글 내용입니다</div>
                </div>
                <form action="/reply/1/delete" method="post">
                    <button class="btn">✏</button>
                </form>
            </div> }}
        </div>
    </div>
</div>
{{> /layout/footer}}