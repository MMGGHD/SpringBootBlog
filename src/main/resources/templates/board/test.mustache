{{> /layout/header}}

<div class="container p-5 pb-0 d-flex justify-content-end">
    <div>
        <button type="button" class="btn btn-warning">수정</button>
        <button type="button" class="btn btn-danger">삭제</button>
    </div>
</div>
<div class="m-3 mt-0 p-5">
    <h2><b>제목 자리</b></h2>
    <hr>
    <div class="p-3">작성 글 내용</div>

    <div class="card m-3">
        <div class="card-body">
            <form action="">
                <div class="mb-2">
                    <!-- textarea는 태그 열고 닫히는 가운데에 사용자가 작성한 내용이 들어온다.-->
                    <!-- 즉 '적은내용' 전달시 소켓, 버퍼를 통해 좌르륵 흘러오게 된다-->
                    <!-- (input은 value에 들어옴.)-->
                    <textarea class="form-control" rows="3" name="content" style="resize: none;"></textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-primary">댓글작성</button>
                </div>
            </form>
        </div>
        <div class="card-footer">댓글 리스트
            <div class="mt-2">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex ">
                                <span class="px-1 me-1 bg-primary text-white rounded">
                                    닉네임</span>
                                <div>댓글 내용</div>
                            </div>
                        <div>🗑</div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

{{> /layout/footer}}