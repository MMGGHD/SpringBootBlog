<!-- Form태그가 있는 문서는 ---form의 문법 -->
{{> /layout/header}}

<!-- title=사용자입력값&content=적은내용 << x-www 형식으로 전달된다. 
    (입력값은 value에 들어간다.)-->
<div class="container p-5">
    <div class="card">
        <div class="card-header"><b>댓글 수정 화면입니다</b></div>
        <div class="card-body">
    <form action="/board/{{reply.id}}/replyUpdate" method="post" enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
<!-- textarea는 태그 열고 닫히는 가운데에 사용자가 작성한 내용이 들어온다.-->
<!-- 즉 '적은내용' 전달시 소켓, 버퍼를 통해 좌르륵 흘러오게 된다-->
<!-- (input은 value에 들어옴.)-->
        <textarea class="form-control" rows="5" name="content" required>{{reply.comment}}</textarea>
        </div>
        <!-- type="submit" << Form태그 input 내의 정보를 '한번에' 전송한다.-->
        <!-- 반드시 form태그 안에 있어야 적용된다.-->
        <button type="submit" class="btn btn-warning me-1">댓글수정 완료</button>
        <a class="btn btn-danger" href="/replyDelete/{{reply.id}}">댓글 삭제하기</a>
        </div></div></div>
    </form>

    {{> /layout/footer}}